{
  "name": "club-management-system",
  "version": "1.0.0",
  "description": "Membership and facilities management system for members-only club",
  "main": "index.js",
  "workspaces": [
    "server",
    "client",
    "tests"
  ],
  "packageManager": "npm@10.5.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:e2e": "turbo run dev:e2e --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch --parallel",
    "test:e2e": "npm run db:setup-test --workspace=server && npm run test --workspace=tests",
    "test:unit": "turbo run test --filter=!e2e",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "deadcode": "knip",
    "deadcode:production": "knip --production",
    "precommit": "lint-staged",
    "ports:clear": "lsof -ti:3000 | xargs kill -9 2>/dev/null; lsof -ti:5173 | xargs kill -9 2>/dev/null; echo 'Ports cleared'",
    "status": "node scripts/check-setup.js && curl -s http://localhost:3000/health | jq . || echo 'Server not running'"
  },
  "keywords": [
    "club",
    "membership",
    "management",
    "events",
    "facilities"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "dependency-cruiser": "^17.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.0.11",
    "knip": "^5.62.0",
    "lint-staged": "^15.2.8",
    "prettier-plugin-organize-imports": "^4.2.0",
    "turbo": "^2.5.5",
    "wait-on": "^8.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  }
}
