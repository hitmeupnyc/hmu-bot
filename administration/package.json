{
  "name": "club-management-system",
  "version": "1.0.0",
  "description": "Membership and facilities management system for members-only club",
  "main": "index.js",
  "workspaces": [
    "server",
    "client",
    "tests"
  ],
  "packageManager": "npm@10.5.0",
  "scripts": {
    "dev": "npm run setup:check && turbo run dev --parallel",
    "setup": "npm install && npm run setup:env && npm run setup:db",
    "setup:env": "node scripts/setup-env.js",
    "setup:db": "npm run db:migrate:latest && npm run db:seed",
    "setup:check": "node scripts/check-setup.js",
    "setup:fresh": "npm run clean && npm run setup",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "deadcode": "knip",
    "deadcode:production": "knip --production",
    "clean": "turbo run clean && rm -rf node_modules",
    "reset": "npm run clean && npm run setup",
    "dev:db-reset": "node scripts/dev-utils.js reset-db",
    "dev:full-reset": "npm run dev:db-reset && npm run dev:simple",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "ports:check": "lsof -i :3000 && lsof -i :5173 || echo 'Ports 3000 and 5173 are available'",
    "ports:kill": "lsof -ti:3000 | xargs kill -9 2>/dev/null; lsof -ti:5173 | xargs kill -9 2>/dev/null; echo 'Ports cleared'",
    "status": "npm run setup:check && curl -s http://localhost:3000/health | jq . || echo 'Server not running'",
    "logs:server": "tail -f server/logs/combined.log",
    "logs:error": "tail -f server/logs/error.log",
    "dev:kill-ports": "node scripts/dev-utils.js kill-ports",
    "dev:health": "node scripts/dev-utils.js health",
    "dev:status": "node scripts/dev-utils.js status"
  },
  "keywords": [
    "club",
    "membership",
    "management",
    "events",
    "facilities"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.0.11",
    "knip": "^5.62.0",
    "lint-staged": "^15.2.8",
    "prettier-plugin-organize-imports": "^4.2.0",
    "turbo": "^2.5.5",
    "wait-on": "^8.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  }
}
