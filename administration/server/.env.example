# =============================================================================
# Club Management System Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files with real credentials to version control

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:5173

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_PATH=./data/club.db

# =============================================================================
# KLAVIYO INTEGRATION
# =============================================================================
# Get these from: https://www.klaviyo.com/account#api-keys-tab
KLAVIYO_API_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
KLAVIYO_WEBHOOK_SECRET=your_klaviyo_webhook_secret_here

# =============================================================================
# EVENTBRITE INTEGRATION
# =============================================================================
# Get these from: https://www.eventbrite.com/platform/api-keys
EVENTBRITE_API_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXX
EVENTBRITE_WEBHOOK_SECRET=your_eventbrite_webhook_secret_here
EVENTBRITE_WEBHOOK_TOKEN=your_eventbrite_webhook_token_here

# Optional: Specific organization ID to limit event syncing
# EVENTBRITE_ORGANIZATION_ID=123456789

# =============================================================================
# PATREON INTEGRATION
# =============================================================================
# Get these from: https://www.patreon.com/portal/registration/register-clients
PATREON_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
PATREON_CLIENT_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
PATREON_WEBHOOK_SECRET=your_patreon_webhook_secret_here

# These are obtained after OAuth flow completion
# PATREON_ACCESS_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# PATREON_REFRESH_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# =============================================================================
# DISCORD INTEGRATION
# =============================================================================
# Get bot token from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=OTxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.XXXXXX.XXXXXXXXXXXXXXXXXXXXXXXXXXX
DISCORD_GUILD_ID=123456789012345678

# Role IDs for automatic membership management (comma-separated)
# Get these by enabling Developer Mode in Discord and right-clicking roles
# Configure these based on your club's Discord server structure
DISCORD_SPECIAL_ROLE_IDS=123456789012345678,987654321098765432
DISCORD_MEMBER_ROLE_IDS=555666777888999000,111222333444555666

# Discord webhook verification (if using Discord webhooks instead of bot events)
DISCORD_PUBLIC_KEY=your_discord_application_public_key_here

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# =============================================================================
# SYNC SERVICE CONFIGURATION
# =============================================================================
SYNC_WORKER_CONCURRENCY=5
WEBHOOK_TIMEOUT_MS=5000
MAX_RETRY_ATTEMPTS=5

# =============================================================================
# REDIS (Optional - for queue management)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# WEBHOOK BASE URLS
# =============================================================================
# Base URL for your application (for webhook registration)
# In production, this should be your actual domain
WEBHOOK_BASE_URL=https://your-domain.com
# For local development with ngrok:
# WEBHOOK_BASE_URL=https://12345678.ngrok.io

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
# Optional: Application monitoring
# SENTRY_DSN=https://your-sentry-dsn-here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to enable detailed API response logging
DEBUG_API_RESPONSES=false

# Set to true to disable webhook signature verification (development only)
DISABLE_WEBHOOK_VERIFICATION=false