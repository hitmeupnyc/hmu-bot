{
  "root": true,
  "env": {
    "node": true,
    "es2020": true
  },
  "extends": ["eslint:recommended"],
  "plugins": ["@typescript-eslint", "unused-imports"],
  "ignorePatterns": ["dist", ".eslintrc.json"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-useless-catch": "off"
  }
}
