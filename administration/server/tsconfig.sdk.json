{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-sdk",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "stripInternal": true
  },
  "include": [
    "src/sdk/**/*",
    "src/api/**/*.ts",
    "src/types/index.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/__tests__/**/*"
  ]
}